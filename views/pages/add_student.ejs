<% include ../partials/top.ejs %>
<div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-offset-3">
                <h1>Add a new Student</h1>
                <form method="post">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-group">
                                <label for="category_name">Student Name: </label>
                                <input type="text" id="student_name" class="form-control" name="student_name">
                            </div>
                            <div class="form-group">
                                 <div class="radio">
                                  <label><input type="radio" name="student_gender" value="Male"> Male</label>
                                </div>
                                <div class="radio">
                                  <label><input type="radio" name="student_gender" value="Female"> Female</label>
                                </div>
                                <div class="radio disabled">
                                  <label><input type="radio" name="student_gender" disabled> Disabled radio button</label>
                                </div> 
                            </div>
                            <div class="form-group">
                                <label for="product_price">Student Age: </label>
                                <input type="text" id="student_age" class="form-control" name="student_age">
                            </div>
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
<% include ../partials/bottom.ejs %>